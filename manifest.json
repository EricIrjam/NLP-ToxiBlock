{
    "manifest_version": 3,
    "name": "ToxiBlock",
    "description": "Block Hate Speach",
    "version": "1.0",
    "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["dist/content.js"]
    }
  ],
  "permissions": [
    "storage", 
    "activeTab", 
    "scripting"
  ],
  "action": {
    "default_popup": "src/index.html"
  },
  "icons": {
    "16": "resources/Lgo_robot_black.png",
    "48": "resources/Lgo_robot_black.png",
    "128": "resources/Lgo_robot_black.png"
  }
}