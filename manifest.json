{
    "manifest_version": 3,
    "name": "ToxiBlock",
    "description": "Block Hate Speach",
    "version": "1.0",
    "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["dist/content.js"]
    }
  ],
  "permissions": [
    "storage", 
    "activeTab", 
    "scripting",
    "http://localhost:5000/*"
  ],
  "action": {
    "default_popup": "src/index.html"
  }
}